// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  fid         String    @id
  pdir_fid    String
  file_name   String
  size        BigInt
  dir         Boolean
  updated_at  DateTime
  created_at  DateTime

  @@index([pdir_fid])
  @@index([file_name(ops: raw("gist_trgm_ops"))], type: Gist)
}
